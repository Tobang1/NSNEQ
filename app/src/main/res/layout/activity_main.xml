<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nursing"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:background="@drawable/my_btn"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        android:layout_marginRight="4dp"
        android:onClick="logout"
        android:text="Logout" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#8D2196F3">
    <TextView
        android:id="@+id/head"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#74673AB7"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_horizontal"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#773F51B5"
        android:textColor="@color/white"
        android:text="Highscore: 0"
        android:textSize="25sp" />



      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/button_start_exam"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:textSize="25dp"
          android:background="@drawable/white_btn"
          android:layout_centerInParent="true"
          android:textColor="@color/black"
          android:text="Start EXAM" />


    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/white_btn"
        android:layout_below="@+id/button_start_exam"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:textAlignment="center"

        android:popupBackground="@drawable/skyblue"
        android:spinnerMode="dropdown"
        android:gravity="center_horizontal" />


      <androidx.appcompat.widget.AppCompatButton

          android:id="@+id/button_My_questions"
          android:layout_below="@+id/spinner_category"
          android:textColor="@color/black"
          android:layout_width="300dp"
          android:background="@drawable/white_btn"
          android:layout_marginTop="8sp"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textSize="20dp"
          android:text="MY QUESTIONS" />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/button_exam_techniques"
        android:layout_below="@+id/button_My_questions"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:background="@drawable/white_btn"
        android:layout_marginTop="8sp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:text="Exam Techniques"/>
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/button_bibliography"
        android:layout_below="@+id/button_exam_techniques"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:background="@drawable/white_btn"
        android:layout_marginTop="8sp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:text="Bibliography"/>


</RelativeLayout>


